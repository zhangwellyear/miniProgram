/* pages/user/user.wxss */
.header {
  display: flex;
  align-items: center;
  justify-content: center;  
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.2);
}

.header image {
  margin-top: 20rpx;
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}

.relation {
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: rgba(0, 0, 0, 0.2);
  height: 80rpx;
}

.relation text {
  color: white;
  font-size: 24rpx;
  flex: 1;
  text-align: center;
  align-items: center;
}

.menu {
  margin: 50rpx;
}

.menu .menu_view {
  border-top: 1px solid pink;
  border-bottom: 1px solid pink;
  margin: 30rpx;
}